<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_overlay"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Background Pulse Effect -->
    <View
        android:id="@+id/viewPulseOuter"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.06" />

    <!-- Main Content Container - Full Screen Optimized -->
    <LinearLayout
        android:id="@+id/containerContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERLAY ACTIVE"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/status_active"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.15"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="#22FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Lock Icon - Larger for Full Screen -->
        <TextView
            android:id="@+id/tvLockIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:textSize="100sp"
            android:shadowColor="#90000000"
            android:shadowDx="0"
            android:shadowDy="8"
            android:shadowRadius="16"
            android:layout_marginBottom="24dp" />

        <!-- Title - Larger and Bolder -->
        <TextView
            android:id="@+id/tvOverlayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM LOCKED"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.03"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:gravity="center"
            android:shadowColor="#60000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full-screen lock is active"
            android:textSize="15sp"
            android:textColor="@color/text_white_secondary"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="28dp"
            android:alpha="0.95" />

        <!-- Divider -->
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#60FFFFFF"
            android:layout_marginBottom="28dp" />

        <!-- Message Card - Enhanced -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#35FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Main Message -->
                <TextView
                    android:id="@+id/tvOverlayMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All system interactions are blocked"
                    android:textSize="15sp"
                    android:textColor="@color/text_white"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.4"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Blocked Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLOCKED FUNCTIONS"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white_secondary"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginBottom="12dp" />

                <!-- Blocked Features Grid -->
                <LinearLayout
                    android:id="@+id/containerBlockedFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#25FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="âœ• Back"
                            android:textSize="12sp"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="âœ• Home"
                            android:textSize="12sp"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="âœ• Recent"
                            android:textSize="12sp"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="âœ• Notify"
                            android:textSize="12sp"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="âœ• Gesture"
                            android:textSize="12sp"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="âœ• Swipe"
                            android:textSize="12sp"
                            android:textColor="@color/text_white"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dismiss Button - Enhanced for Full Screen -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDismissButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDismiss"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ”“ UNLOCK SYSTEM"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:background="@drawable/bg_button_success"
                app:cornerRadius="16dp"
                app:iconGravity="textStart"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.02"
                android:elevation="0dp" />

        </androidx.cardview.widget.CardView>

        <!-- Help Text -->
        <TextView
            android:id="@+id/tvHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the button above to unlock and dismiss"
            android:textSize="12sp"
            android:textColor="@color/text_white_secondary"
            android:fontFamily="sans-serif"
            android:alpha="0.9"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Auto-Dismiss Timer - Enhanced -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FF9800"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-dismiss: 30s"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.03" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/containerFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="#30FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvFooterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FULL-SCREEN LOCK OVERLAY"
            android:textSize="9sp"
            android:textColor="@color/text_white_secondary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.15"
            android:alpha="0.6" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
