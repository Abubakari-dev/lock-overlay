<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Card with Gradient -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_main"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Lock Icon -->
                <TextView
                    android:id="@+id/tvLockIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp" />

                <!-- App Title -->
                <TextView
                    android:id="@+id/tvAppTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:fontFamily="sans-serif-medium" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Overlay System"
                    android:textSize="14sp"
                    android:textColor="@color/text_white_secondary"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Status Label -->
                <TextView
                    android:id="@+id/tvStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textAllCaps="true" />

                <!-- Status Value -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay_inactive"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/status_inactive"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:background="@drawable/bg_status_inactive"
                    android:fontFamily="sans-serif-medium" />

                <!-- Status Description -->
                <TextView
                    android:id="@+id/tvStatusDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The overlay is currently not active"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Control Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Controls Title -->
                <TextView
                    android:id="@+id/tvControlsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overlay Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Activate Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActivate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/activate_overlay"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:background="@drawable/bg_button_primary"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_lock_lock"
                    app:iconGravity="start"
                    app:iconTint="@color/white"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.025" />

                <!-- Deactivate Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeactivate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/deactivate_overlay"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:background="@drawable/bg_button_danger"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_lock_idle_lock"
                    app:iconGravity="start"
                    app:iconTint="@color/white"
                    android:layout_marginTop="12dp"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.025" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bonus Features Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBonusFeatures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardControls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Bonus Features Title -->
                <TextView
                    android:id="@+id/tvBonusFeaturesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonus Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Auto-Dismiss Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto-Dismiss Timer"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automatically dismiss overlay after set time"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAutoDismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Auto-Dismiss Duration -->
                <LinearLayout
                    android:id="@+id/layoutAutoDismissDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration (seconds):"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginEnd="12dp" />

                    <Spinner
                        android:id="@+id/spinnerDuration"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <!-- PIN Protection Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PIN Protection"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Require PIN to dismiss overlay"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchPinProtection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Set PIN Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSetPin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Set PIN"
                    android:textSize="14sp"
                    android:textColor="@color/text_white"
                    android:background="@drawable/bg_button_success"
                    app:cornerRadius="8dp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintTop_toBottomOf="@id/cardBonusFeatures"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Info Icon -->
                <TextView
                    android:id="@+id/tvInfoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸"
                    android:textSize="24sp"
                    android:layout_marginEnd="12dp" />

                <!-- Info Text -->
                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Activate the overlay to display a full-screen lock that blocks all system interactions. Only the internal button can dismiss it."
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
